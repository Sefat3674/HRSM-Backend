@model DAL.Models.MailType
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    window.ViewPermission = @ViewBag.ViewPermission;
    window.AddPermission = @ViewBag.AddPermission;
    window.ModifyPermission = @ViewBag.ModifyPermission;
    window.DeletePermission = @ViewBag.DeletePermission;
    window.SpecialModifyPermission = @ViewBag.SpecialModifyPermission;
</script>
<!--breadcrumb-->
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Pages</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a asp-controller="dashboardv2" asp-action="dashboardv2"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">MailType</li>
            </ol>
        </nav>
    </div>
</div>
<!--end breadcrumb-->

<div class="card shadow-sm radius-10 border-0 mb-3">
    <div class="card-body">
        <div class="row">
            @if (ViewBag.AddPermission == 1)
            {
                <div class="col-8"></div>
                <div class="col-4 justify-content-end d-flex ">
                    <button class="btn btn-outline-success form-control" data-bs-toggle="modal" data-bs-target="#mailTypeModal"><i class="fas fa-plus"></i> Add</button>
                </div>
            }
            <div class="table-responsive mt-4">
                <table id="mailTypeTable" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Status</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
@if (Model.Id == 0)
{
    <div class="modal fade" id="mailTypeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-primary" id="exampleModalLabel">Add Mail Type</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="post" id="mailTypeForm">
                        <div class="form-group ">
                            <label class="col-form-label">Name</label>
                            <input type="text" asp-for="Name" class="form-control" placeholder="Please Enter the Name">
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-outline-success">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}


<div class="modal fade" id="editMailTypeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary" id="exampleModalLabel">Edit Mail Type</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" id="editMailTypeForm">
                    <input type="text" hidden id="mailTypeId" asp-for="Id" />
                    <div class="form-group ">
                        <label class="col-form-label">Name</label>
                        <input type="text" asp-for="Name" id="NameEdit" class="form-control" placeholder="Please Enter the Name">
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-outline-success">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/SiteJS/MasterJS/mail-type.js"></script>
}
