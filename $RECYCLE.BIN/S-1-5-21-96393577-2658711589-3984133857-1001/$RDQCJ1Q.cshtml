@{
    ViewData["Title"] = "Tool Room Dashboard";
}
<h1 align="middle">ToolRoomDashboard</h1>
<div class="dashboard-wrapper">

    <!-- PIE CHART SECTION -->
    <div class="card chart-card">
        <h3 class="section-title">Task Status Overview</h3>
        <canvas id="taskPieChart"></canvas>
    </div>

    <!-- BUTTON SECTION -->
    <div class="card button-card">
        <h3 class="section-title">Tool Room Navigation</h3>

        <div class="button-container">
            <button class="dash-btn" data-action="machine">
                <i class="fa fa-cogs"></i> Tool Room Machine Schedule
            </button>

            <button class="dash-btn" data-action="wip">
                <i class="fa fa-tasks"></i> WIP Scheduling
            </button>

            <button class="dash-btn" data-action="operator">
                <i class="fa fa-user"></i> Track Operator
            </button>
        </div>
    </div>

</div>

<!-- Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- Page Script -->
<script src="~/SiteJS/ToolRoomDashboardHomepage.js"></script>

<style>
    .dashboard-wrapper {
        width: 100%;
        padding: 20px;
        display: flex;
        flex-direction: column;
        gap: 25px;
        font-family: Arial, sans-serif;
    }

    .card {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .section-title {
        margin-bottom: 15px;
        font-size: 20px;
        font-weight: 600;
    }

    .chart-card {
        width: 450px;
        margin: 0 auto;
    }

    .button-card {
        text-align: center;
    }

    .button-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 15px;
    }

    .dash-btn {
        padding: 12px 20px;
        background: #0078ff;
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 15px;
        transition: 0.2s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .dash-btn:hover {
            background: #005fcc;
        }
</style>
